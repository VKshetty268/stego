// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // This points to a local SQLite database file
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  name         String?
  phone        String?
  organization String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  uploads      UploadEvent[]
}

model UploadEvent {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  filename  String
  mimetype  String
  sizeBytes Int
  result    String
  createdAt DateTime @default(now())
}
