// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"   // This points to a local SQLite database file
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  password     String
  createdAt    DateTime  @default(now())
  uploadsUsed  Int       @default(0)   // <-- Add this field
  uploads      UploadEvent[]           // relation (optional, if you want to link uploads)
}

model UploadEvent {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  filename  String
  mimetype  String
  sizeBytes Int
  result    String
  createdAt DateTime @default(now())
}
