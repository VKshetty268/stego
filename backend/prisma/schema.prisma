datasource db {
  provider = "sqlite"
  url      = "file:./stego_trial.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  passwordHash  String
  name          String
  organization  String?
  phone         String?
  surveyJson    Json?
  uploadsUsed   Int       @default(0) // enforce 5 max
  createdAt     DateTime  @default(now())
  lastIp        String?
  emailVerified Boolean   @default(false)
  uploads       UploadEvent[]
}

model UploadEvent {
  id        Int      @id @default(autoincrement())
  userId    Int
  filename  String
  mimetype  String
  sizeBytes Int
  result    String   // "clean" | "malicious" | "error"
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model SignupAttempt {
  id        Int      @id @default(autoincrement())
  ip        String
  createdAt DateTime @default(now())
}
